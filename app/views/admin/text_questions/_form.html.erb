<%= form_for [:admin, @text_question] do |f| %>
  <div class="field">
    <%= f.label :content, 'Question' %><br />
    <%= f.text_area :content, rows: 3 %><br />
  </div>
  <div class="field">
    <%= f.label :sample_answer, 'Answer' %><br />
    <%= f.text_area :sample_answer, rows: 7 %><br />
  </div>
  <%= f.hidden_field :course_id, value: @course.id%>
  <p><%= f.submit 'Submit', class: "btn btn-primary" %></p>
<% end %>